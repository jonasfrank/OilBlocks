<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wonClearAll"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:text="@string/won_clearAllText"
            />
    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/won_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/wonpic"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/menyButton"
            android:layout_marginBottom="14dp"
            android:src="@drawable/button_custom_won_meny"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/won_picture"
            android:layout_alignStart="@+id/won_picture"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <ImageButton
            android:id="@+id/reversButton"
            android:src="@drawable/button_custom_won_reverse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"

            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/menyButton"
            android:layout_alignRight="@+id/won_picture"
            android:layout_alignEnd="@+id/won_picture"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>
</LinearLayout>